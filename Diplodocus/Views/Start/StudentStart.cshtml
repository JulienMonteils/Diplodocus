@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    if (Session["StudentId"] == null)
    {
        Response.Redirect("~/Users/Login");
    }
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/style1.css" />
    <meta name="viewport" content="width=device-width" />
    <title>Menu Etudiant</title>
</head>
<body>

    <div class="container" style="margin-top:15%;opacity:0.8">
        <div class="row">
            <div class="col-sm-7 col-md-8 col-md-offset-2">
                <div class="panel panel-default" style="color: greenyellow; background-color:#262626; border:0px solid #262626">
                    <div class="panel-heading" style="color: greenyellow; background-color:#262626; border:0px solid #262626">
                        Voici votre outils de simulation de notes
                    </div>
                    <div class="panel-body" style="color: lawngreen; background-color:white; border:0px solid #262626">
                        <form role="form" action="#" method="POST">
                            <fieldset>
                                <div class="row">
                                    <div class="center-block">
                                        <p style="margin-left:15px; font-weight:bold">
                                            Bonjour à vous, @Session["StudentFirstName"] @Session["StudentLastName"],<br />
                                            Bienvenue sur l'application Diplodocus !
                                        </p>
                                        <div style="padding-left:35%">@Html.ActionLink("Simuler vos notes", "Index", "Simulations", new { id = Session["UserId"] }, new { @class = "btn btn-lg btn-success btn-block", style = "width:200px" })</div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                    <div class="panel-footer" style="color: greenyellow; background-color:#262626; border:0px solid #262626">
                        Bonne Utilisation
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>