@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    if (Session["StudentId"] == null)
    {
        Response.Redirect("~/Users/Login");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student menu</title>
</head>
<body>
    <p>
        Vous etes Etudiant :
        <br />
        StudentId => @Session["UserId"]
        <br />
        StudentFirstName => @Session["StudentFirstName"]
        <br />
        StudentLastName => @Session["StudentLastName"]
        <br />
        StudentPhoneNumber => @Session["StudentPhoneNumber"]
        <br />
        StudentAddressEmail => @Session["StudentAddressEmail"]
        <br />
        UserType => @Session["UserType"]
    </p>
    @Html.ActionLink("Simuler vos notes", "Index", "Simulations", new { id = Session["UserId"] }, new { @class = "btn btn-primary" })
</body>
</html>