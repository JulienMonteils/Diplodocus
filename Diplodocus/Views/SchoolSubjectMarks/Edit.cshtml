@model Diplodocus.Models.SchoolSubjectMark

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    if (Session["ManagerId"] == null)
    {
        Response.Redirect("~/Users/Login");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Edition</title>
</head>
<body>


    <div class="container" style="background-color:white; border-radius:10px; margin-top:5%; margin-bottom:5%">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>SchoolSubjectMark</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdMark)

                <div class="form-group">
                    <label class="control-label col-md-2">Note </label>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Mark, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Mark, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Etudiant </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StudentIdStudent, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StudentIdStudent, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-2">Matière </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SchoolSubjectIdSchoolSubject, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SchoolSubjectIdSchoolSubject, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Retour", "Index")
        </div>
        </div>
</body>
</html>
